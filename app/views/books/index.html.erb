<% if @book.errors.any? %>
  <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'users/info', user: @user %>

<P><%= link_to "Edit", edit_user_path(@user) %></P>

<%= render 'form', book: @book %>

<div>
  <h1>Books</h1>
  <table>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>

    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </table>

</div>
