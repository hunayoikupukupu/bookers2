<%= render 'users/info', user: @user %>

<% if @user == current_user %>
  <P><%= link_to "Edit", edit_user_path(@user) %></P>
<% else %>
  <P><%= link_to "Edit", user_path(current_user.id) %></P>
<% end %>


<%= render 'form', book: @book_new %>


<h1>Book detail</h1>
<table>
  <tr>
    <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <td>
      <% if @book.user == current_user %>
        <%= link_to "edit", edit_book_path(@book) %>
        <%= link_to "destroy", book_path(@book), method: :delete %>
      <% end %>
    </td>
  </tr>
</table>
