<div class="container text-center">
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <div class="text-left">
        <h1 class="edit_heading text-left">Editing Book</h1>

        <% if @book.errors.any? %>
          <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model: @book do |f| %>
          <label>Title</label>
            <%= f.text_field :title, class:"form-control mb-3" %>
          <label>Opinion</label>
            <%= f.text_area :body, class:"form-control mb-3" %>
          <div class="actions">
            <%= f.submit 'Update Book', class:"btn btn-success" %>
          </div>

          <div class="mt-2">
            <%= link_to "Show", book_path(@book.id) %>
            <span>|</span>
            <%= link_to "Back", books_path %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>