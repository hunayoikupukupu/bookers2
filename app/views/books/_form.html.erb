<h1>New Book</h1>
<div class="w-100">
  <%= form_with model: book do |f| %>
    <label>Title</label>
      <%= f.text_field :title, class:"form-control mb-3" %>
    <label>Opinion</label>
      <%= f.text_area :body, class:"form-control mb-3" %>
    <div class="actions">
      <%= f.submit 'Create Book', class:"btn btn-success" %>
    </div>
  <% end %>
</div>