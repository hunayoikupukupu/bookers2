<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <div class="row">
        <div class="row"><%= render 'info', user: @user %></div>
        <div class="row mx-auto w-100">
          <%= link_to edit_user_path(@user), class:"btn btn-outline-dark w-100" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <div class="row"><%= render 'books/form', book: @book_new %></div>
      </div>
    </div>

    <div class="col-lg-1"></div>
    <div class="col-lg-8">
      <h1>Users</h1>
      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>

        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>