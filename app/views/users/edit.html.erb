<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <div class="text-left">
        <h1 class="edit_heading">User info</h1>
        
        <% if @user.errors.any? %>
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        
        <%= form_with model: @user do |f| %>
          <label>Name</label>
            <%= f.text_field :name, class:"form-control mb-3" %>
          <label>Image</label><br>
          <%= f.file_field :profile_image, accept: "image/*", class:"mb-3" %>
          <label>Introduction</label>
            <%= f.text_area :introduction, class:"form-control mb-3" %>
          <div class="actions">
            <%= f.submit 'Update User', class:"btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>