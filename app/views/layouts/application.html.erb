<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/25fa200149.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="bg-dark">
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <a class="navbar-bland p-2 text-white" href="/" ><h3>Bookers</h3></a>

            <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item lead">
                <%= link_to root_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-home-lg"></i> Home
                <% end %>
              <li class="nav-item lead">
                <%= link_to users_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-users"></i> Users
                <% end %>
              </li>

              <li class="nav-item lead">
                <%= link_to books_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-book-open"></i> Books
                <% end %>
              </li>
              <li class="nav-item lead">
                <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
                  <i class="fas fa-sign-out-alt"></i> Log out
                <% end %>
              </li>
            <% else %>
              <li class="nav-item lead">
                <%= link_to root_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-home-lg"></i> Home
                <% end %>
              </li>
              <li class="nav-item lead">
                <%= link_to about_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-link"></i> About
                <% end %>
              </li>
              <li class="nav-item lead">
                <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-user-plus"></i> Sign up
                <% end %>
              </li>
              <li class="nav-item lead">
                <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-sign-in-alt"></i> Log in
                <% end %>
              </li>
            <% end %>
            </ul>
        </div>
      </nav>
    </header>

    <main class="mb-auto">
    <%= yield %>
    </main>

    <footer class="pt-5 pb-4">
      <h5 class="text-center">CopyRight Infratop.inc</h5>
    </footer>
  </body>
</html>
